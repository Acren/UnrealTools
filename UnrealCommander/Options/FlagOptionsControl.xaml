<local:OptionsUserControl x:Class="UnrealCommander.Options.FlagOptionsControl"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                          xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                          xmlns:local="clr-namespace:UnrealCommander.Options"
                          xmlns:operationOptionTypes="clr-namespace:UnrealAutomationCommon.Operations.OperationOptionTypes;assembly=UnrealAutomationCommon"
                          mc:Ignorable="d" 
                          d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel >
        <CheckBox IsChecked="{Binding Path=StompMalloc, Mode=TwoWay}" VerticalAlignment="Center" VerticalContentAlignment="Center">
            <TextBlock Text="Stomp Malloc" VerticalAlignment="Center" />
        </CheckBox>
        <CheckBox IsChecked="{Binding Path=WaitForAttach, Mode=TwoWay}" VerticalAlignment="Center" VerticalContentAlignment="Center">
            <TextBlock Text="Wait for Attach" VerticalAlignment="Center" />
        </CheckBox>
    </StackPanel>
</local:OptionsUserControl>
