<local:OptionsUserControl x:Class="UnrealCommander.Options.PackageOptionsControl"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                          xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                          xmlns:local="clr-namespace:UnrealCommander.Options"
                          mc:Ignorable="d"
                          d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <CheckBox IsChecked="{Binding NoDebugInfo.Value, Mode=TwoWay}" VerticalAlignment="Center"
                  VerticalContentAlignment="Center">
            <TextBlock Text="No Debug Files" VerticalAlignment="Center" />
        </CheckBox>
        <CheckBox IsChecked="{Binding Archive.Value, Mode=TwoWay}" VerticalAlignment="Center"
                  VerticalContentAlignment="Center">
            <TextBlock Text="Archive" VerticalAlignment="Center" />
        </CheckBox>
    </StackPanel>
</local:OptionsUserControl>